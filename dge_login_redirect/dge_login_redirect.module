use Drupal\Core\Url;

/**
 * Implements hook_user_login().
 */
function dge_login_redirect_user_login($account) {

  $current_route = Drupal::routeMatch()->getRouteName();
  $request = Drupal::request();
  if ($request->getRequestFormat() !== 'html') {
    return;
  }
  $destination = $request->query->get('destination');
  if ($destination && $destination != '/user/login') {
    return;
  }

  if (\Drupal::state()->get('system.maintenance_mode') &&
    !$account->hasPermission('access site in maintenance mode')) {
    \Drupal::service('request_stack')
      ->getCurrentRequest()->query->set('destination', URL::fromUserInput('/')
      ->toString());
  }

  $pass_reset_token = \Drupal::request()->query->get('pass-reset-token');
  if ($pass_reset_token) {
    \Drupal::logger('dge_login_redirect')->info('Redirect to home avoided due to being a password reset');
    return;
  }

  if (!in_array($current_route, ['user.reset', 'user.reset.login'])) {
    \Drupal::service('request_stack')
      ->getCurrentRequest()->query->set('destination', URL::fromUserInput('/')->toString());
  }
}
