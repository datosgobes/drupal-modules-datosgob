use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_FORM_ID_alter() for the role form.
 */
function dge_unique_role_name_form_user_role_form_alter(array &$form, FormStateInterface $form_state)
{
  $form['#validate'][] = 'dge_unique_role_name_validate_role_label';
}

function dge_unique_role_name_validate_role_label(array &$form, FormStateInterface $form_state)
{
  $label = $form_state->getValue('label');
  $rid = $form_state->getValue('rid');

  if (!empty($label)) {
    $existing_roles = \Drupal::entityQuery('user_role')
      ->condition('label', $label)
      ->condition('id', $rid, '<>')
      ->execute();

    if (!empty($existing_roles)) {
      $form_state->setErrorByName('label', t('The role label is already in use.'));
    }
  }
}
