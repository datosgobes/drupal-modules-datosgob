{% set custom_order = [
	'Administración del Estado',
	'Administración Autonómica',
	'Administración Local',
	'Universidades',
	'Otras Instituciones',
	'Entidad Privada'
  ] %}

<div class="dge-initiatives">
	<div class="dge-initiatives__mask"></div>
	<div class="dge-initiatives-totales">
		<span>
		{{total}}
		</span>
		<span>
		{{'open data initiatives' | t}}
		</span>
	</div>
	
	<div class="dge-initiatives-types">
		
		{% for name in custom_order %}
		  {% for initiative in initiatives %}
			{% if initiative.title == name|t %}
			  <div class="dge-initiatives-type">
				<span class="dge-initiatives-type-name">{{ initiative.title }}:</span>
				<span class="dge-initiatives-type-number">{{ initiative.total }}</span>
			  </div>
			{% endif %}
		  {% endfor %}
		{% endfor %}
	  </div>

	<span class="dge-initiatives-link">
		<a href="{{map_link}}">{{'open map' | t}}</a>
	</span>
</div>
