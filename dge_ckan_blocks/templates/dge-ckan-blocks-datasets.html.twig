<div class="dge-ckan-blocks-packages">
    <ul>
        {% for package in packages %}
        <li class="dge-ckan-blocks-package clearfix">
            <a href="{{ package.url }}" class="dge-ckan-blocks-package-link" style="display: block; text-decoration: none; color: inherit;">
                <div class="content">
                    <div class="dge-ckan-last-datasets-title">
                        <span class="titleblockckan">{{ package.title }}</span>
                    </div>
                    <div class="dge-ckan-last-datasets-publisher">
                        <span class="dge-ckan-last-datasets-data-title text--italic regular primary-color-semi-dark mb-0 mr-2">{{ 'Published by: ' | t }}</span>
                        <span class="primary-color-dark regular text--bold">{{ package.publisher }}</span>
                    </div>
                </div>
            </a>
        </li>
        {% endfor %}
    </ul>
</div>

<div class="read-more">
  <a href="{{ckan_url}}">{{'View more' | t }}</a>
</div>

