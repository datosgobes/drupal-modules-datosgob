/**
 * Implements hook_mail().
 */
function dge_sendinblue_mail($key, &$message, $params) {
    switch ($key) {
        case 'unsubscribe':
        $headers['headers'] = $params['headers'];
        $message['from'] = \Drupal::config('system.site')->get('mail');
        $message['subject'] = $params['subject'];
        $message['body'][] = $params['body'];
        break;
    }
}

/**
 * Implements hook_schema_translation().
 */
function dge_sendinblue_schema_translation() {
  $schema['dge_sendinblue']['dge_sendinblue_unsuscribe_email_subject'] = ['dge_sendinblue_unsuscribe_email_subject'];
  $schema['dge_sendinblue']['dge_sendinblue_unsuscribe_email_content'] = ['dge_sendinblue_unsuscribe_email_content'];
  return $schema;
}