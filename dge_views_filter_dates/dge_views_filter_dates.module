use Drupal\search_api\Query\Query;
use Drupal\search_api\Query\Condition;
use Drupal\search_api\Query\ConditionGroup;

/**
 * Implements hook_search_api_query_alter().
 *
 */
function dge_views_filter_dates_search_api_query_alter(Query $query) {
  $condition_group = $query->getConditionGroup();
  dge_views_filter_dates_alter_conditions($condition_group);
}

function dge_views_filter_dates_alter_conditions(ConditionGroup $group) {
  foreach ($group->getConditions() as $condition) {
   
    if ($condition instanceof ConditionGroup) {
        dge_views_filter_dates_alter_conditions($condition);
    }
    elseif (is_array($condition)) {
      foreach ($condition as $sub_condition) {
        dge_views_filter_dates_process_condition($sub_condition);
      }
    }
    else {
        dge_views_filter_dates_process_condition($condition);
    }
  }
}

function dge_views_filter_dates_process_condition($condition) {
  if ($condition instanceof Condition) {
    $field = $condition->getField();
    $operator = $condition->getOperator();
    $value = $condition->getValue();

    if ($operator === '<=' && !empty($value) && is_numeric($value)) {
      $adjusted_value = $value + 86400; 
      $condition->setValue($adjusted_value);
    }
  }
}