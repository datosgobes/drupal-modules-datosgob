define('PUBLISHER', 'publicador');
define('REUSER', 'reutilizador');

/**
 * Implements hook_install().
 */
function dge_broken_links_ckan_install() {
  user_role_grant_permissions(PUBLISHER, ['access broken links views']);
  user_role_grant_permissions(REUSER, ['access broken links views']);
}

/**
 * Implements hook_uninstall().
 */
function dge_broken_links_ckan_uninstall() {
  user_role_revoke_permissions(PUBLISHER, ['access broken links views']);
  user_role_revoke_permissions(REUSER, ['access broken links views']);
}