use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_form_FORM_ID_alter().
 */
function dge_email_custom_form_user_register_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['account']['mail']['#required'] = TRUE;
}

/**
 * Implements hook_element_info_alter().
 */
function dge_email_custom_element_info_alter(array &$types) {
  if (isset($types['email'])) {
    $types['email']['#element_validate'][] = 'validateEmail';
  }
}

function validateEmail(&$element, &$form_state, &$complete_form) {
  $value = trim($element['#value']);
  $form_state->setValueForElement($element, $value);

  if (empty($value)) {
      return;
  }

  if ($value !== '' && !\Drupal::service('email.validator')->isValid($value) || !filter_var($value, FILTER_VALIDATE_EMAIL)) {
      $form_state->setError($element, t('Enter a valid email. Ex: abc@xyz.com', ['%mail' => $value]));
  }
}
