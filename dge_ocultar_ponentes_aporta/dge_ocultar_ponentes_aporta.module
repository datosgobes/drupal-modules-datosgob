use Drupal\node\NodeInterface;
use Drupal\Core\Session\AccountInterface;
use Drupal\Core\Access\AccessResult;


function dge_ocultar_ponentes_aporta_node_access(NodeInterface $node, $op, AccountInterface $account) {
 
  if ($node->bundle() === 'ponentes_aporta' && $op === 'view') {
    
    $current_path = \Drupal::service('path.current')->getPath();
    $alias_manager = \Drupal::service('path_alias.manager');
    $internal_path = $alias_manager->getPathByAlias($current_path);

    if ($internal_path === '/node/' . $node->id()) {
      return AccessResult::forbidden();
    }
  }

  return AccessResult::neutral();
}